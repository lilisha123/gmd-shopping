<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

	<!-- 设置数据库驱动jar的位置 -->
	<classPathEntry
		location="D:\maven_test1\mysql\mysql-connector-java\5.1.47/mysql-connector-java-5.1.47.jar" />
	<!-- targetRuntime 1,mybatis3:默认值，会生成大量对表操作的方法 2，mybatis3Simple：只会生成对表基础操作的方法 -->
	<context id="mysql" targetRuntime="MyBatis3Simple">
		<!--关闭自动生成的注释 -->
		<commentGenerator>
			<property name="suppressAllComments" value="true"></property>
		</commentGenerator>
		<jdbcConnection
			connectionURL="jdbc:mysql://localhost:3306/training?useSSL=true"
			driverClass="com.mysql.jdbc.Driver" password="" userId="root" />
		<!-- 设置实体类所在的位置 -->
		<javaModelGenerator
			targetPackage="com.springcloud.entity"
			targetProject="springcloud-02-shopping-common\src\main\java" />
		<!-- 设置实体类对应的映射文件的位置 -->
		<sqlMapGenerator targetPackage="mapper"
			targetProject="springcloud-02-shopping-orders-provider\src\main\resources" />
		<!--设置映射文件对应的接口的位置 -->
		<javaClientGenerator
			targetPackage="com.springcloud.dao"
			targetProject="springcloud-02-shopping-orders-provider\src\main\java"
			type="XMLMAPPER" />

		<table schema="training" tableName="orders">
			<!--是否使用表中的列名生成实体类成员变量的名字 -->
			<property name="userActualColumnNames" value="false" />
		</table>
		<table schema="training" tableName="order_detail">
			<!--是否使用表中的列名生成实体类成员变量的名字 -->
			<property name="userActualColumnNames" value="false" />
		</table>
	</context>
</generatorConfiguration>